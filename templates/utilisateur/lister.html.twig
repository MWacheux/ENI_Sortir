{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <a href="{{ path('app_participant_ajouter') }}" class="btn btn-success">Ajouter un utilisateur</a>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalToggle">Importer des utilisateurs</button>

    <div class="row mt-3">
        {% for utilisateur in utilisateurs %}
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ utilisateur.prenom }} {{ utilisateur.nom }}</h5>
                        <p class="card-text"></p>
                        {% if utilisateur.actif == 1 %}
                            <a href="{{ path('app_participant_desactiver', {'utilisateur' : utilisateur.id}) }}" class="btn btn-warning">DÃ©sactiver</a>
                        {% else %}
                            <a href="{{ path('app_participant_activer', {'utilisateur' : utilisateur.id}) }}" class="btn btn-success">Activer</a>
                        {% endif %}
                        <a href="{{ path('app_participant_supprimer', {'utilisateur' : utilisateur.id}) }}" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


    <div class="modal fade" id="modalToggle" aria-labelledby="modalToggleLabel" tabindex="-1" style="display: none;" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalToggleLabel">Importer des utilisateurs</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-footer">
                    <div class="input-group">
                    {{ form_start(form) }}
                        {{ form_row(form.submitFile) }}
                        {{ form_row(form.button) }}
                    {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
