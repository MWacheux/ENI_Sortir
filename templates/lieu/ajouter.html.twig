{% extends 'base.html.twig' %}

{% block title %}Ajouter un lieu{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="card">
        <h5 class="card-header">{{ form.vars.data.id ? 'Modifier' : 'Ajouter' }} un lieu</h5>
        <div class="card-body">
            {{ form_row(form.nom) }}
            {{ form_row(form.rue) }}
            {{ form_row(form.latitude) }}
            {{ form_row(form.longitude) }}
            {{ form_row(form.ville) }}
            {{ form_row(form.ajouterVille) }}
            {{ form_row(form.enregistrerLieu) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
