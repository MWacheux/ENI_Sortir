{% extends 'base.html.twig' %}

{% block title %}Ajouter une ville{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="card">
        <h5 class="card-header">{{ form.vars.data.id ? 'Modifier' : 'Ajouter' }} une ville</h5>
        <div class="card-body">
            <div data-controller="commune">
                {{ form_row(form.nom) }}
                <ul data-commune-target="results" class="cursor-pointer"></ul>
                {{ form_row(form.codePostal) }}
                <button type="submit" class="btn btn-success mt-3" data-commune-target="bouton">{{ form.vars.data.id ? 'Modifier' : 'Ajouter' }}</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
