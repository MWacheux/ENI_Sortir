{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
        </div>
        <div class="col">
            {{ form_row(form.telephone) }}
            {{ form_row(form.email) }}
        </div>
        {{ form_row(form.photo) }}
        {% if app.user.photo is not null %}
            <img src="{{ photo }}" class="w-25 rounded" alt="ma photo">
        {% else %}
            <i class="bx bxs-user"></i>
        {% endif %}
    </div>
    <button type="submit" class="btn btn btn-primary mt-3">Enregistrer</button>
    <a href="{{ path('app_participant_themesombre') }}" class="btn btn-secondary mt-3">Switch th√®me sombre</a>
    {{ form_end(form) }}
{% endblock %}
