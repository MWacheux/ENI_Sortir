{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
        </div>
        <div class="col">
            {{ form_row(form.telephone) }}
            {{ form_row(form.email) }}
        </div>
    </div>
    <button type="submit" class="btn btn-lg btn-primary">Enregistrer</button>
    {{ form_end(form) }}
{% endblock %}
