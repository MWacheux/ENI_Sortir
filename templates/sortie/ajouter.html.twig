{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}

    {{ form_start(sortieform) }}
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1>{{ sortieform.vars.data.id ? 'Modifier' : 'Ajouter' }} une sortie</h1>
                <a href="{{ path('app_sortie_lister') }}" class="btn btn-dark">Retour</a>
            </div>
            <div class="card-body">
                {{ form_row(sortieform.nom) }}
                {{ form_row(sortieform.infosSortie) }}
                {{ form_row(sortieform.dateHeureDebut) }}
                {{ form_row(sortieform.dateLimiteInscription) }}
                {{ form_row(sortieform.nbInscriptionsMax) }}
                {{ form_row(sortieform.duree) }}
                <div data-controller="sortie">
                    {{ form_row(sortieform.lieu) }}
                    <div data-sortie-target="divNewLieu" class="">
                        {{ form_row(sortieform.newlieu.nom) }}
                        {{ form_row(sortieform.newlieu.rue) }}
                        {{ form_row(sortieform.newlieu.latitude) }}
                        {{ form_row(sortieform.newlieu.longitude) }}
                        {{ form_row(sortieform.newlieu.ville) }}
                        <div data-controller="commune" data-sortie-target="divNewVille" class="">
                            {{ form_row(sortieform.newlieu.newville.nom) }}
                            <ul data-commune-target="results" class="cursor-pointer"></ul>
                            {{ form_row(sortieform.newlieu.newville.codePostal) }}
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
{#                    <div class="col-2">#}
                        {{ form_row(sortieform.enregistrerSortie) }}
{#                    </div>#}
{#                    <div class="col-2">#}
                        {{ form_row(sortieform.publierSortie) }}
{#                    </div>#}
                </div>
            </div>
        </div>
    {{ form_end(sortieform) }}
{% endblock %}
